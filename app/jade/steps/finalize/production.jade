  
.production
  .icon-choices.lexi
    each plan in plans
      .choice(id="#{plan.name}" class=plan.is_disabled ? "disabled" : "")
        label
          .icon-choice.little-brother.pre-prod
            .icon
              img.shadow-icon(data-src="plan-#{plan.id}")
              .micro-title #{plan.name}
            input(value="#{plan.id}" type="radio" name="plan")
            .cost= plan.max_price
            .blurb 
              each feature in plan.features
                .feature= planFeatures[feature].label
  .finalize
    .arrow-button.continue Continue
