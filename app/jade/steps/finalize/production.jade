mixin pluralize(value, descriptor)
  if value == 1
    .item #{value} #{descriptor}
  else
    .item #{value} #{descriptor}s
    
  
.production
  .icon-choices.lexi
    each plan in plans
      label
        .icon-choice.little-brother.pre-prod
          .icon
            img.shadow-icon(data-src="plan-#{plan.id}")
            .micro-title #{plan.name}
          input(value="#{plan.id}" type="radio" name="plan")
          .cost= plan.max_price
          .blurb 
            +pluralize(plan.max_servers, 'Server')
            +pluralize(plan.max_collaborators, 'Collaborator')
            +pluralize(plan.max_triggers, 'Trigger')
  
  .finalize
    .pay-holder Select a Payment Method : 
    .add-payment-method 
      .txt To checkout, first : 
      a.button(href="#{addPayMethodPath}") Add a Payment Method
    .arrow-button Submit
